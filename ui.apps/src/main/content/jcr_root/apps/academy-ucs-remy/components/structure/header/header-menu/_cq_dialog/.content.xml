<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Header Menu"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <menus
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                        composite="{Boolean}true"
                        fieldDescription="Click '+' to add a new menu"
                        fieldLabel="Menus List">
                        <field
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            name="./menus">
                            <items jcr:primaryType="nt:unstructured">
                                <name
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    emptyText="Name"
                                    fieldDescription="Enter the menu name"
                                    fieldLabel="Name"
                                    name="./name"
                                    required="{Boolean}true"/>
                                <select
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                    fieldLabel="icons"
                                    name="./selector">
                                    <items jcr:primaryType="nt:unstructured">
                                        <option1
                                            jcr:primaryType="nt:unstructured"
                                            text="icon-search"
                                            value="icon icon-search"/>
                                        <option2
                                            jcr:primaryType="nt:unstructured"
                                            text="icon-estero"
                                            value="icon icon-estero2"/>
                                        <option3
                                            jcr:primaryType="nt:unstructured"
                                            text="icon-calendar"
                                            value="icon icon-calendar"/>
                                        <option4
                                            jcr:primaryType="nt:unstructured"
                                            text="icon-contact"
                                            value="icon icon-contattaci2"/>
                                    </items>
                                </select>
                                <path
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                    fieldDescription="Path of the link."
                                    fieldLabel="Path"
                                    name="./path"
                                    required="{Boolean}true"
                                    rootPath="/content/academy-ucs-remy"/>
                                <target
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                    fieldLabel="Open:"
                                    name="./target">
                                    <items jcr:primaryType="nt:unstructured">
                                        <option1
                                            jcr:primaryType="nt:unstructured"
                                            text="open in new tab"
                                            value="_blank"/>
                                        <option2
                                            jcr:primaryType="nt:unstructured"
                                            text="open in current tab"
                                            value="_self"/>
                                    </items>
                                </target>
                            </items>
                        </field>
                    </menus>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
